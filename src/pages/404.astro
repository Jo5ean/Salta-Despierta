---
import config from "@/config/config";
import Layout from "@/layouts/Layout.astro";
---

<Layout title={`404 - ${config.title}`}>
    <div
        class="min-h-[80vh] flex flex-col items-center justify-center gap-4 text-center max-w-3xl mx-auto"
    >
        <h1 class="text-7xl font-titles text-primary">404</h1>
        <p class="text-lg">Esta pagina no existe</p>

        <a
            href="/"
            class="border-2 border-primary text-white py-2 px-6 hover:bg-white/10 transition-all duration-300 font-titles tracking-titles"
        >
            Volver al inicio
        </a>
    </div>
</Layout>
