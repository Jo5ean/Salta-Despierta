---
const { news } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-6">
  <h3 class="text-xl font-bold text-darkGray mb-4 pb-2 border-b border-gray-200">
    NOTICIAS POPULARES
  </h3>
  
  <div class="space-y-4">
    {news.map((item, index) => (
      <article class="flex items-start gap-3">
        <span class="text-2xl font-bold text-primary/30">{index + 1}</span>
        <div>
          <h4 class="font-bold leading-tight text-darkGray hover:text-primary">
            <a href={item.url}>
              {item.title}
            </a>
          </h4>
          <div class="text-xs text-gray-500 mt-1">
            <time datetime={item.date}>
              {new Date(item.date).toLocaleDateString('es-ES', {day: 'numeric', month: 'long'})}
            </time>
          </div>
        </div>
      </article>
    ))}
  </div>
</div>